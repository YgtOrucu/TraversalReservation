@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TravelsalLayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Rotalar </h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Users/HomePage">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!--  Work gallery section -->
<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Tur Rotaları</h3>
            <div class="row">
                @foreach (var item in Model.Take(3))
                {

                    <div class="col-lg-4 col-md-4 col-6">
                        <div class="column" style="width: min-content;">
                            <a href="@(Url.Action("DestinationDetails", "Destination", new { id = item.DestinationID }))">
                                <img src="@(item.Image)" alt="" style="height: 320px;width: 270px;">
                            </a>
                            <div class="info">
                                <h4><a href="@(Url.Action("DestinationDetails", "Destination", new { id = item.DestinationID }))">@(item.City)</a></h4>
                                <p>@(item.DayAndNight)</p>
                                <div class="dst-btm">
                                    <h6 class="">Başlayan Fiyatlarla </h6>
                                    <span>@(item.Price.ToString("N2") + " ₺")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @foreach (var item in Model.Skip(3))
                {

                    <div class="col-lg-4 col-md-4 col-6 mt-lg-5 mt-4">
                        <div class="column" style="width: min-content;">
                            <a href="@(Url.Action("DestinationDetails", "Destination", new { id = item.DestinationID }))">
                                <img src="@(item.Image)" alt="" style="height: 320px;width: 270px;">
                            </a>
                            <div class="info">
                                <h4><a href="@(Url.Action("DestinationDetails", "Destination", new { id = item.DestinationID }))">@(item.City)</a></h4>
                                <p>@(item.DayAndNight)</p>
                                <div class="dst-btm">
                                    <h6 class="">Başlayan Fiyatlarla </h6>
                                    <span>@(item.Price.ToString("N2") + " ₺")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
