@model int

<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
    <p class="mb-4">
        İşaretli alanları doldurmanız gerekmektedir. *
    </p>
    <form action="/Comment/AddComment" method="post">

        <input type="hidden" name="DestinationID" value="@Model" />

        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="UserName" class="form-control" placeholder="Ad Soyad*"
                       required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Gönder </button>
        </div>
    </form>
</div>