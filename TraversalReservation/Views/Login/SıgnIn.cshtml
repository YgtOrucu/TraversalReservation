@model TraversalReservation.Models.UserSıgnInViewModal
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Travelsal Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/Login_v1/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/Login_v1/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Login_v1/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Login_v1/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="/Login_v1/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="/Login_v1/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/Login_v1/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Login_v1/css/main.css">
    <!--===============================================================================================-->
    <!-- CUSTOM VALIDATION STYLE -->
    <style>
        .error-text {
            color: #ff4d4f;
            font-size: 12px;
            margin-left: 42px;
            margin-top: -8px;
            display: block;
        }

        .validation-summary-errors {
            background: #fff1f0;
            border: 1px solid #ffccc7;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 15px;
            color: #a8071a;
            font-size: 13px;
        }
    </style>
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="/Login_v1/images/img-01.png" alt="IMG">
                </div>

                @using (Html.BeginForm("SıgnIn", "Login", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <span class="login100-form-title">
                        Member Login
                    </span>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- EMAIL -->
                    <div class="wrap-input100 validate-input" data-validate="Bu Alan Boş geçilemez">
                        @Html.TextBoxFor(x => x.Username, new { @class = "input100", placeholder = "Username", type = "text" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(x => x.Username, "", new { @class = "error-text" })
                    <!-- PASSWORD -->
                    <div class="wrap-input100 validate-input" data-validate="Bu Alan Boş geçilemez">
                        @Html.PasswordFor(x => x.Password, new { @class = "input100", placeholder = "Password" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error-text" })
                    <!-- BUTTON -->
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">Forgot</span>
                        <a class="txt2" href="#">Password</a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("SıgnUp", "Login")">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>




    <script src="/Login_v1/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="/Login_v1/vendor/bootstrap/js/popper.js"></script>
    <script src="/Login_v1/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Login_v1/vendor/select2/select2.min.js"></script>
    <script src="/Login_v1/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="/Login_v1/js/main.js"></script>

</body>
</html>