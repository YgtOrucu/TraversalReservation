@model TraversalReservation.Areas.Member.Models.UserEditViewModal
@{
    ViewData["Title"] = "MembersProfile";
    Layout = "~/Views/Shared/_UsersLayout.cshtml";
}



<div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('/soft-ui-dashboard/assets/img/curved-images/curved0.jpg'); background-position-y: 50%;">
    <span class="mask bg-gradient-primary opacity-6"></span>
</div>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                <img src="@Model.ImgUrl" alt="profile_image" style="width: 60px;border-radius: 50%;">
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1" style="display:inline-flex">
                        @Model.Name @Model.Surname
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0">Profile Information</h6>
                        </div>
                        <div class="col-md-4 text-end">
                        <a href="/Member/Profile/MembersEditProfile">
                                <i class="fa fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">                  
                    <ul class="list-group">
                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Full Name:</strong> &nbsp;  @Model.Name @Model.Surname</li>
                        <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; @Model.Mail</li>
                        <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">UserName:</strong> &nbsp; @Model.Username</li>
                        <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Phone:</strong> &nbsp; @Model.PhoneNumber</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
