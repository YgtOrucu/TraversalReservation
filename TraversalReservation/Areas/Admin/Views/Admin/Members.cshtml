@model IEnumerable<EntityLayer.Concreate.AppUser>
@{
    ViewData["Title"] = "Members";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>

    /* Wrapper spacing */
    .members-wrapper .col-12 {
        margin-bottom: 1.5rem;
    }

    /* Member Card */
    .member-card {
        position: relative;
        border: none;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

        .member-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 35px rgba(0, 0, 0, 0.12);
        }

    /* Avatar */
    .member-avatar {
        width: 90px;
        height: 90px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #f1f1f1;
    }

    /* Text */
    .member-name {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .member-info p,
    .member-info li {
        font-size: 0.85rem;
        margin-bottom: 6px;
    }

    .member-email {
        word-break: break-all;
    }

    /* Dropdown Actions */
    .member-actions {
        position: absolute;
        top: 12px;
        right: 12px;
        z-index: 10;
    }

        .member-actions .btn {
            width: 34px;
            height: 34px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .member-actions .dropdown-menu {
            border-radius: 12px;
            font-size: 0.85rem;
        }

</style>


<div class="card members-wrapper">
    <h5 class="card-header">Members</h5>

    <div class="card-body pb-0">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card member-card bg-white">

                        <!-- Actions -->
                        <div class="dropdown member-actions">
                            <button type="button"
                                    class="btn btn-light btn-sm rounded-circle shadow-sm dropdown-toggle hide-arrow"
                                    data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center"
                                       href="@Url.Action("OldReservation", "Admin", new { Area = "Admin", id = item.Id })">
                                        <i class="bx bx-edit-alt me-2"></i>
                                        Tur Geçmişi
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="d-flex align-items-center">

                                <img src="@(item.ImgUrl)"
                                     alt="avatar"
                                     class="member-avatar me-3" />

                                <div class="member-info">
                                    <h6 class="mb-0 text-sm mb-2">@(item.Name + item.Surname)</h6>
                                    <p class="text-muted mb-2">
                                        <strong>UserName:</strong> @(item.UserName)
                                    </p>

                                    <p class="text-muted mb-2">
                                        <strong>Phone:</strong> @(item.PhoneNumber)
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-envelope"></i> @(item.Email)
                                    </p>

                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

